{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current" // Транспилирует под текущую версию Node.js
        },
        "useBuiltIns": "usage",
        "corejs": "3.6.5"
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    "@babel/plugin-transform-modules-commonjs" // Преобразует ES модули в CommonJS
  ]
}
